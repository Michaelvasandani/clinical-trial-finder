# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI Organization ID (if you're part of an organization)
OPENAI_ORG_ID=your_organization_id_here

# Environment Configuration
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true  # Set to false in production

# Application Settings
APP_NAME=Clinical Trial Finder
APP_VERSION=1.0.0

# Database Configuration (if needed later)
# DATABASE_URL=sqlite:///clinical_trials.db

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=50
MAX_REQUESTS_PER_HOUR=1000

# Cost Management
MAX_DAILY_COST_USD=50.0
ALERT_COST_THRESHOLD_USD=40.0

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_CONVERSATIONS=true  # Log conversations for analysis (anonymized)

# Security Settings
SECRET_KEY=your_secret_key_here  # For session management if needed
CORS_ORIGINS=http://localhost:3000,http://localhost:8000  # Allowed frontend origins

# Optional: Monitoring and Analytics
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_ENABLED=false